    package="com.github.k1rakishou.kurobaexlite">

    <application
        android:name="com.github.k1rakishou.kurobaexlite.KurobaExLiteApplication"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.KurobaExLite">

        <activity
            android:name="com.github.k1rakishou.kurobaexlite.MainActivity"
            android:exported="true"
            android:label="@string/app_name"
            android:theme="@style/Theme.KurobaExLite.NoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

    </application>

</manifest>